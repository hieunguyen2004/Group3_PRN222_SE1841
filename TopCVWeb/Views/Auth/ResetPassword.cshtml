@model string

<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post">
    <div>
        <label>New Password:</label>
        <input type="password" name="newPassword" required />
    </div>
    <button type="submit">Reset</button>
</form>

@if (!string.IsNullOrEmpty(Model))
{
    <p>@Model</p>
}
