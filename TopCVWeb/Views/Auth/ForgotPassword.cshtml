@model TopCVWeb.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="auth-page">
    <h2>Quên mật khẩu</h2>

    <form asp-action="ForgotPassword" method="post">
        <input asp-for="Email" placeholder="Email của bạn" required />
        <span asp-validation-for="Email" class="text-danger"></span>

        <button type="submit">Gửi mã đặt lại mật khẩu</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success" style="margin-top: 10px;">@ViewBag.Message</div>
    }
    @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Count > 0)
    {
        <div class="text-danger" style="margin-top: 10px;">
            @foreach (var error in ViewData.ModelState[""].Errors)
            {
                <p>@error.ErrorMessage</p>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
