@model DAO.Models.User
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
}

<div class="container mt-5">
    <div class="card shadow-lg rounded-4">
        <div class="card-body p-4">

            <!-- Ảnh đại diện -->
            <div class="text-center mb-4">
                @{
                    var avatarUrl = string.IsNullOrEmpty(Model.Avatar)
                    ? "/images/default-avatar.png" // Thay đường dẫn nếu bạn có ảnh mặc định
                    : Model.Avatar;
                }
                <img src="@avatarUrl" alt="Avatar" class="rounded-circle shadow"
                     style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #007bff;" />
                <h3 class="mt-3">@Model.Firstname @Model.Lastname</h3>
                <p class="text-muted">@Model.Email</p>
            </div>

            @if (TempData["Message"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Message"]</div>
            }

            <!-- Form chỉnh sửa -->
            <form asp-action="Index" method="post" class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Họ</label>
                    <input asp-for="Firstname" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Tên</label>
                    <input asp-for="Lastname" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ngày sinh</label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">Giới tính</label>
                    <select asp-for="Gender" class="form-select">
                        <option>Nam</option>
                        <option>Nữ</option>
                        <option>Khác...</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Số điện thoại</label>
                    <input asp-for="Phone" class="form-control" />
                </div>
                <div class="col-12">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="Address" class="form-control" />
                </div>
                <div class="col-12">
                    <label class="form-label">Link ảnh đại diện (URL)</label>
                    <input asp-for="Avatar" class="form-control" />
                </div>

                <div class="col-12 text-end">
                    <button type="submit" class="btn btn-primary btn-lg mt-3">💾 Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>
