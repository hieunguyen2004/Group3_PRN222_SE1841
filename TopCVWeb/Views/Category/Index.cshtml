@model List<DAO.Models.Category>
@{
    ViewData["Title"] = "Danh sách danh mục";
    var searchTerm = ViewBag.SearchTerm as string ?? "";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<div class="container py-4">
    <h2 class="text-primary mb-4">📂 Danh sách danh mục</h2>

    <div class="row mb-3 align-items-center">
        <div class="col-md-8">
            <form asp-action="Index" method="get" class="d-flex gap-2">
                <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="🔍 Tìm theo tên danh mục..." />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="bi bi-search"></i> Tìm
                </button>
            </form>
        </div>
        <div class="col-md-4 text-end">
            <a class="btn btn-success" asp-action="Create">
                ➕ Thêm danh mục
            </a>
        </div>
    </div>

    <div class="table-responsive shadow rounded border">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-primary text-center">
                <tr>
                    <th>ID</th>
                    <th>Tên danh mục</th>
                    <th>Ảnh</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@item.CategoryId</td>
                            <td class="fw-semibold">@item.CategoryName</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.CategoryImage))
                                {
                                    <div style="height: 50px; width: 60px; overflow: hidden; margin: auto;">
                                        <img src="@item.CategoryImage" alt="Category"
                                             style="height: 100%; width: 100%; object-fit: cover; border-radius: 6px;" />
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Chưa có ảnh</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-warning me-1"
                                   asp-action="Edit" asp-route-id="@item.CategoryId">✏️ Sửa</a>

                                <form asp-action="Delete" asp-route-id="@item.CategoryId"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc chắn muốn xoá danh mục này không?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Xoá</button>
                                </form>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4">Không có danh mục nào phù hợp.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
