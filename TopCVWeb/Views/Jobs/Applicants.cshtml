@model List<TopCVWeb.Models.ApplicantViewModel>

<h2>Danh sách ứng viên</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên ứng viên</th>
            <th>Ngày nộp</th>
            <th>Trạng thái</th>
            <th>CV</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var applicant in Model)
        {
            <tr>
                <td>@applicant.FullName</td>
                <td>@applicant.SubmitDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <select class="form-select status-select" data-id="@applicant.CvId">
                        <option value="Nộp đơn" selected="@(applicant.Status == "Nộp đơn")">Nộp đơn</option>
                        <option value="Chấp nhận" selected="@(applicant.Status == "Chấp nhận")">Chấp nhận</option>
                        <option value="Từ chối" selected="@(applicant.Status == "Từ chối")">Từ chối</option>
                    </select>
                </td>
                <td>
                    <a class="btn btn-sm btn-info"
                       asp-action="ViewCv"
                       asp-route-cvId="@applicant.CvId"
                       target="_blank">Xem CV</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    document.querySelectorAll('.status-select').forEach(select => {
        select.addEventListener('change', function () {
            const cvId = this.dataset.id;
            const newStatus = this.value;

            fetch('/Cv/UpdateStatus', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ id: cvId, status: newStatus })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success) {
                    alert("Cập nhật thành công!");
                } else {
                    alert("Lỗi: " + data.message);
                }
            })
            .catch(err => alert("Có lỗi: " + err));
        });
    });
</script>


<a asp-action="ManageApplicants" class="btn btn-secondary">Quay lại</a>
